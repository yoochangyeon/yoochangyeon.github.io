---
/**
 * Social Share Buttons Component
 *
 * 블로그 포스트를 소셜 미디어에 공유할 수 있는 버튼을 제공합니다.
 * 한국 시장에 특화된 공유 옵션을 포함합니다.
 *
 * SEO 효과:
 * - 소셜 시그널(Social Signals) 생성
 * - 백링크 획득 기회 증가
 * - 브랜드 인지도 및 트래픽 향상
 * - 사용자 참여도(Engagement) 증가
 */

export interface Props {
  title: string;
  url: string;
  description?: string;
}

const { title, url, description = '' } = Astro.props;

// URL 인코딩
const encodedUrl = encodeURIComponent(url);
const encodedTitle = encodeURIComponent(title);
const encodedDescription = encodeURIComponent(description);

// 소셜 공유 URL 생성
const shareUrls = {
  twitter: `https://twitter.com/intent/tweet?url=${encodedUrl}&text=${encodedTitle}`,
  facebook: `https://www.facebook.com/sharer/sharer.php?u=${encodedUrl}`,
  linkedin: `https://www.linkedin.com/sharing/share-offsite/?url=${encodedUrl}`,
  // 카카오톡 공유는 Kakao SDK가 필요하므로 별도 구현 필요
};
---

<div class="share-buttons flex items-center gap-3 mt-8 pt-6 border-t border-gray-200 dark:border-gray-700">
  <span class="text-sm font-medium text-gray-700 dark:text-gray-300">공유하기:</span>

  <!-- Twitter/X -->
  <a
    href={shareUrls.twitter}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-[#1DA1F2] dark:bg-gray-800 dark:hover:bg-[#1DA1F2] transition-colors group"
    aria-label="Twitter에 공유"
    title="Twitter에 공유"
  >
    <svg class="w-5 h-5 text-gray-700 group-hover:text-white dark:text-gray-300 dark:group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
      <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
    </svg>
  </a>

  <!-- Facebook -->
  <a
    href={shareUrls.facebook}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-[#1877F2] dark:bg-gray-800 dark:hover:bg-[#1877F2] transition-colors group"
    aria-label="Facebook에 공유"
    title="Facebook에 공유"
  >
    <svg class="w-5 h-5 text-gray-700 group-hover:text-white dark:text-gray-300 dark:group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
      <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
    </svg>
  </a>

  <!-- LinkedIn -->
  <a
    href={shareUrls.linkedin}
    target="_blank"
    rel="noopener noreferrer"
    class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-[#0A66C2] dark:bg-gray-800 dark:hover:bg-[#0A66C2] transition-colors group"
    aria-label="LinkedIn에 공유"
    title="LinkedIn에 공유"
  >
    <svg class="w-5 h-5 text-gray-700 group-hover:text-white dark:text-gray-300 dark:group-hover:text-white transition-colors" fill="currentColor" viewBox="0 0 24 24">
      <path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/>
    </svg>
  </a>

  <!-- URL 복사 -->
  <button
    type="button"
    class="inline-flex items-center justify-center w-10 h-10 rounded-full bg-gray-100 hover:bg-gray-300 dark:bg-gray-800 dark:hover:bg-gray-600 transition-colors group"
    aria-label="URL 복사"
    title="URL 복사"
    onclick={`
      navigator.clipboard.writeText('${url}').then(() => {
        const btn = this;
        const originalTitle = btn.getAttribute('title');
        btn.setAttribute('title', '복사됨!');
        btn.classList.add('bg-green-500', 'dark:bg-green-600');
        setTimeout(() => {
          btn.setAttribute('title', originalTitle);
          btn.classList.remove('bg-green-500', 'dark:bg-green-600');
        }, 2000);
      });
    `}
  >
    <svg class="w-5 h-5 text-gray-700 group-hover:text-gray-900 dark:text-gray-300 dark:group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"/>
    </svg>
  </button>
</div>

<style>
  .share-buttons button:focus,
  .share-buttons a:focus {
    outline: 2px solid currentColor;
    outline-offset: 2px;
  }
</style>
