---
import Layout from '~/layouts/PageLayout.astro';
import BlogList from '~/components/blog/List.astro';
import Pagination from '~/components/blog/Pagination.astro';
import BlogSidebar from '~/components/blog/Sidebar.astro';

import { fetchPosts, blogPostsPerPage } from '~/utils/blog';

export const prerender = true;

const allPosts = await fetchPosts();
const posts = allPosts.slice(0, blogPostsPerPage);
const hasNextPage = allPosts.length > blogPostsPerPage;

const metadata = {
  title: '개발하는 유에녹',
  ignoreTitleTemplate: true,
  openGraph: {
    type: 'blog',
  },
};
---

<Layout metadata={metadata}>
  <div class="container mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="max-w-7xl mx-auto">
      <div class="grid grid-cols-1 lg:grid-cols-12 gap-8">
        <!-- Sidebar (Left) -->
        <div class="lg:col-span-3">
          <div class="lg:sticky lg:top-24">
            <BlogSidebar />
          </div>
        </div>

        <!-- Main Content (Right) -->
        <div class="lg:col-span-9">
          <div class="space-y-6">
            <BlogList posts={posts} />
            <Pagination nextUrl={hasNextPage ? '/blog/2' : undefined} />
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
