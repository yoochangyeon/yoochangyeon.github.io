---
import { getCollection } from 'astro:content';
import BaseLayout from '../layouts/BaseLayout.astro';

// 게시글 가져오기 (초안 제외, 날짜 순 정렬)
const posts = (await getCollection('posts'))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime());
---

<BaseLayout title="개발 블로그" description="기술과 개발에 대한 이야기">
  <div class="max-w-4xl mx-auto px-4 py-12">
    <header class="mb-16 text-center">
      <h1 class="text-5xl font-bold text-gray-900 mb-4">
        개발 블로그
      </h1>
      <p class="text-xl text-gray-600">
        기술과 개발에 대한 생각을 나눕니다
      </p>
    </header>

    <div class="space-y-8">
      {posts.map((post) => {
        const formattedDate = new Intl.DateTimeFormat('ko-KR', {
          year: 'numeric',
          month: 'long',
          day: 'numeric',
        }).format(post.data.publishDate);

        return (
          <article class="border-b border-gray-200 pb-8 last:border-0">
            <a href={`/posts/${post.slug}`} class="block group">
              <h2 class="text-2xl md:text-3xl font-bold text-gray-900 mb-3 group-hover:text-blue-600 transition-colors">
                {post.data.title}
              </h2>

              <p class="text-gray-600 mb-4 leading-relaxed">
                {post.data.description}
              </p>

              <div class="flex flex-wrap items-center gap-4 text-sm">
                <time datetime={post.data.publishDate.toISOString()} class="text-gray-500">
                  {formattedDate}
                </time>

                {post.data.tags && post.data.tags.length > 0 && (
                  <div class="flex flex-wrap gap-2">
                    {post.data.tags.map((tag) => (
                      <span class="px-3 py-1 bg-gray-100 text-gray-700 rounded-full text-xs font-medium">
                        {tag}
                      </span>
                    ))}
                  </div>
                )}
              </div>
            </a>
          </article>
        );
      })}
    </div>

    {posts.length === 0 && (
      <div class="text-center py-16">
        <p class="text-gray-500 text-lg">아직 게시글이 없습니다.</p>
      </div>
    )}
  </div>
</BaseLayout>
